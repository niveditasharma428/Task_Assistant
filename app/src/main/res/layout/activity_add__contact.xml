<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/rootLayout"
android:background="@color/colorPrimary"
tools:context=".Add_Contact">
    <TextView
        android:id="@+id/txtclose1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textColor="@color/white"
        android:text="X"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:gravity="center"
        android:background="@drawable/cerclebackground"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center_horizontal"
        android:paddingLeft="40dp"
        android:layout_marginTop="175dp"
        android:paddingRight="40dp"
        android:fontFamily="sans-serif-light"
        android:text="Please type or select User contact number to sent code "
        android:textColor="@android:color/white"
        android:textSize="18dp" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal">


    <EditText
        android:id="@+id/phone_number_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:hint="Enter phone number here"
        android:inputType="phone"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/edit_style" />
    <ImageView
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:id="@+id/add_contact_image_view"
        android:src="@mipmap/ic_contacts"/>
</LinearLayout>


<Button
    android:id="@+id/send_button"
    android:layout_width="150dp"
    android:layout_height="40dp"
    android:layout_gravity="center"
    android:layout_marginTop="45dp"
    android:text="Send"
    android:fontFamily="sans-serif-light"
    android:textColor="@color/white"
    android:background="@drawable/btn_bg"/>



    <RelativeLayout
        android:id="@+id/rellay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">


        <Button
           android:id="@+id/goto_dash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/transparent"
            android:fontFamily="sans-serif"
            android:layout_alignParentBottom="true"
            android:text="Go to Dashboard"
            android:textAllCaps="true"
            android:textColor="@color/white" />

    </RelativeLayout>


</LinearLayout>