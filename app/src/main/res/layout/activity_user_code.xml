<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
    android:background="#22344A"
    android:id="@+id/rootLayout"
tools:context=".User_code">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:id="@+id/rLayout"
        android:orientation="vertical">

        <TextView

            android:id="@+id/textlogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Please enter your mobile\nand code "
            android:textSize="18dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="160dp"
            android:letterSpacing="0.1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="(code sent to your mobile no) "
            android:textSize="12dp"
            android:textColor="@color/white"
            style="@style/Regular"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:letterSpacing="0.1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Mobile"
            android:layout_marginTop="20dp"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="15sp" />


        <cn.zhaiyifan.rememberedittext.RememberEditText
            android:id="@+id/editTextMobile"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:inputType="phone"
            android:background="@drawable/et_bg"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:rememberCount="3"
            app:rememberId="password"
            app:autoFill="true"
            app:autoSave="true"/>

        <EditText
            android:id="@+id/code"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:inputType="phone"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_style"
            android:textColor="@color/black"
            android:textColorHint="@color/dot_active"
            android:gravity="center_horizontal"
            android:hint="Enter Code"
            android:maxLength="6"
            android:padding="10dp"
            android:layout_marginTop="30dp"
            />

        <Button
            android:id="@+id/verify"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="13dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/cw_button_shadow3"
            android:paddingTop="2mm"
            android:text="Verify"
            android:textAllCaps="false"
            android:textColor="#fff" />

    </LinearLayout>





    <Button
        android:id="@+id/Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/transparent"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-medium"
        android:textAlignment="center"
        android:text="Already Verified?\nLogin Here"
        android:textAllCaps="true"
        android:textColor="@color/white" />





</LinearLayout>