<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile"
    android:orientation="vertical"
    tools:showIn="@layout/app_bar_profile">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:title="Profile"
        android:fontFamily="sans-serif-light"
        app:titleMarginStart="28dp"
        app:titleTextColor="@color/white" />


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/pro1"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_border_width="0dp" />


        <Button
            android:id="@+id/upload"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="#156995"
            android:text="Upload"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#dad8d8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0000"
                android:fontFamily="sans-serif-light"
                android:gravity="left"
                android:maxLength="12"
                android:padding="3dp"
                android:text="Username"
                android:textColor="#a2a1b8"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0000"
                android:fontFamily="sans-serif-light"
                android:gravity="left"
                android:hint="xyz"
                android:maxLength="120"
                android:padding="3dp"
                android:textColor="#a2a1b8"
                android:textColorHint="#a2a1b8"
                android:textSize="20dp" />

        </LinearLayout>

        <!-- <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dad8d8" />
-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="25dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/emil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0000"
                android:fontFamily="sans-serif-light"
                android:gravity="left"
                android:maxLength="12"
                android:padding="3dp"
                android:text="Email"
                android:textColor="#a2a1b8"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/profile_email"
                android:layout_width="550dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0000"
                android:fontFamily="sans-serif-light"
                android:gravity="left"
                android:hint="xyz@gmail.com"
                android:maxLength="220"
                android:maxLines="1"
                android:padding="3dp"
                android:textColor="#181737"
                android:textColorHint="#1b193b"
                android:textSize="20dp" />
        </LinearLayout>


        <!--   <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dad8d8" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="14dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0000"
                android:fontFamily="sans-serif-light"
                android:gravity="left"
                android:maxLength="12"
                android:padding="3dp"
                android:text="Phone Number"
                android:textColor="#a2a1b8"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/profile_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0000"
                android:fontFamily="sans-serif-light"
                android:gravity="left"
                android:hint="9988776656"
                android:maxLength="12"
                android:padding="3dp"
                android:textColor="#181737"
                android:textColorHint="#1b193b"
                android:textSize="20dp" />
        </LinearLayout>

        <!-- <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dad8d8" />-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="14dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0000"
                android:fontFamily="sans-serif-light"
                android:gravity="left"
                android:maxLength="12"
                android:padding="3dp"
                android:text="Group"
                android:textColor="#a2a1b8"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0000"
                android:fontFamily="sans-serif-light"
                android:gravity="left"
                android:hint="0"
                android:maxLength="12"
                android:padding="3dp"
                android:textColor="#a2a1b8"
                android:textColorHint="#a2a1b8"
                android:textSize="20dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="14dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0000"
                android:fontFamily="sans-serif-light"
                android:gravity="left"
                android:maxLength="12"
                android:padding="3dp"
                android:text="Password"
                android:textColor="#a2a1b8"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/profile_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0000"
                android:fontFamily="sans-serif-light"
                android:gravity="left"
                android:text="Password"
                android:maxLength="12"
                android:padding="3dp"
                android:inputType="textPassword"
                android:textColor="#181737"
                android:textColorHint="#1b193b"
                android:textSize="20dp" />
        </LinearLayout>


        <!-- <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="#dad8d8" />
 -->

        <Button
            android:id="@+id/buttonLogout"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/edit_style"
            android:fontFamily="sans-serif-light"
            android:text="Logout"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="#156995" />


    </LinearLayout>


</LinearLayout>







